<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Todo List App" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="White" Margin="16" CornerRadius="8" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#673AB7" CornerRadius="8,8,0,0" Padding="16">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋 My Tasks" FontSize="18" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding Tasks.Count, Mode=OneWay, StringFormat=' ({0} tasks)'}" 
                                 FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                </Border>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Tasks}" 
                           SelectedItem="{Binding SelectedTask}"
                           Margin="8" 
                           BorderThickness="0" 
                           Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                      Padding="12" 
                                      Margin="0,2" 
                                      CornerRadius="4"
                                      BorderBrush="#E0E0E0" 
                                      BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" 
                                                IsChecked="{Binding IsCompleted}" 
                                                VerticalAlignment="Top" 
                                                Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" 
                                                     FontWeight="Medium" 
                                                     FontSize="14"/>
                                            <TextBlock Text="{Binding Description}" 
                                                     FontSize="12" 
                                                     Foreground="#666666" 
                                                     Margin="0,4,0,0"/>
                                            <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:MMM dd, HH:mm}'}" 
                                                     FontSize="10"
                                                     Foreground="#999999"
                                                     Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                                 Text="✓" 
                                                 FontSize="16" 
                                                 Foreground="Green" 
                                                 VerticalAlignment="Top"
                                                 Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                <StackPanel Grid.Row="2" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="16">
                    <Button Content="✓ Toggle" 
                          Command="{Binding ToggleCompleteCommand}" 
                          Margin="4" 
                          Padding="12,6"
                          Background="#673AB7"
                          Foreground="White"
                          BorderThickness="0"/>
                    <Button Content="✏️ Edit" 
                          Command="{Binding EditTaskCommand}" 
                          Margin="4" 
                          Padding="12,6"
                          Background="#673AB7"
                          Foreground="White"
                          BorderThickness="0"/>
                    <Button Content="🗑️ Delete" 
                          Command="{Binding DeleteTaskCommand}" 
                          Margin="4" 
                          Padding="12,6"
                          Background="#F44336"
                          Foreground="White"
                          BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        <GridSplitter Grid.Column="1" Width="5" Background="#E0E0E0"/>
        <Border Grid.Column="2" 
              Background="White" 
              Margin="0,16,16,16" 
              CornerRadius="8"
              BorderBrush="#E0E0E0" 
              BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="#673AB7" CornerRadius="8,8,0,0" Padding="16">
                    <TextBlock Text="Add New Task" 
                             FontSize="16" 
                             FontWeight="Bold" 
                             Foreground="White"/>
                </Border>
                <StackPanel Grid.Row="1" Margin="16">
                    <TextBlock Text="Task Title" FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewTaskTitle, UpdateSourceTrigger=PropertyChanged}" 
                           Margin="0,0,0,16" 
                           Padding="8"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"/>

                    <TextBlock Text="Description (optional)" FontWeight="Medium" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding NewTaskDescription, UpdateSourceTrigger=PropertyChanged}" 
                           AcceptsReturn="True" 
                           MinLines="3" 
                           MaxLines="6" 
                           Margin="0,0,0,16" 
                           Padding="8"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"/>

                    <Button Content="➕ Add Task" 
                          Command="{Binding AddTaskCommand}" 
                          Padding="12,8" 
                          Background="#673AB7" 
                          Foreground="White" 
                          BorderThickness="0"
                          HorizontalAlignment="Stretch"/>
                    <Border Height="1" Background="#E0E0E0" Margin="0,24,0,16"/>

                    <TextBlock Text="Quick Stats" FontSize="14" FontWeight="Medium" Margin="0,0,0,8"/>

                    <TextBlock Margin="0,4">
                        <Run Text="Total Tasks: "/>
                        <Run Text="{Binding Tasks.Count, Mode=OneWay}" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
